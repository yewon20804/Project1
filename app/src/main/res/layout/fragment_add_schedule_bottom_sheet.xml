<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray70"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/btnCancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/gray10"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/btnDone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="@color/primary70"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextContent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="일정명"
        android:textColor="@color/gray00"
        android:textColorHint="@color/gray10"
        android:backgroundTint="@color/gray10"
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timeLabel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="시간"
        android:textColor="@color/gray10"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/timePickerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오전 9:00"
        android:padding="12dp"
        android:background="@color/gray60"
        android:textColor="@color/gray00"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/colorLabel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="색상"
        android:textColor="@color/gray10"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/colorButtonContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical" />

</LinearLayout>
