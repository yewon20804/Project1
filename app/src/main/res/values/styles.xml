<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--   캘린더 스타일_ 정수빈 작성-->
    <style name="CalendarHeaderStyle" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/gray00</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray00</item>
    </style>

    <style name="CalendarWeekDayTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray10</item>
    </style>

    <style name="CalendarWeekDay" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray10</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomCalendarViewStyle">
        <item name="mcv_selectionColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/gray70</item>
        <item name="android:padding">16dp</item>
    </style>

<!--    네비 스타일_ 김예원 작성-->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/bottom_nav_text_selector</item>
        <item name="itemIconTint">@null</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

<!--    서윤님 스타일 코드-->
    <style name="DayButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_dy_selector</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="HourLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="WeekdayStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TimeLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TimeDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#444444</item>
    </style>


</resources>